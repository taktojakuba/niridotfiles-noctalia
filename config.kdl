// launch noctalia-shell at startup via qs (shell/UI layer)
spawn-at-startup "qs" "-c" "noctalia-shell"

// disable client-side decorations (no titlebar buttons: close/minimize/maximize)
prefer-no-csd

// input configuration
input {
    keyboard {
        // force NumLock on at startup
        numlock
    }

    // focus follows mouse, scrolling disabled to avoid focus chaos
    focus-follows-mouse max-scroll-amount="0%"
}

// output configuration example (commented out)
// use `niri msg outputs` to list outputs and adjust as needed
//output "eDP-1"{
//    // set resolution and refresh rate
//    mode "1920x1080@144.00"
//    // place output relative to others
//    position x=-1920 y=100
//}

// layout and window positioning rules
layout {
    // gaps between windows
    gaps 16

    // do not auto-center focused column
    center-focused-column "never"

    // predefined column width presets
    preset-column-widths {
      proportion 0.33333
      proportion 0.5
      proportion 0.66667
    }

    // default column width
    default-column-width { proportion 0.5; }

    // focus ring settings (disabled)
    focus-ring {
        off
        width 2
    }

    // window borders
    border {
        width 2
        active-color "#ffffff"
        inactive-color "#505050"
    }

    // window shadows
    shadow {
        softness 30
        spread 5
        offset x=0 y=5
        color "#0007"
    }
}

// hotkey overlay (help screen)
// remove skip-at-startup if you want it to show on login
hotkey-overlay {
    skip-at-startup
}

// default screenshot save path and filename format
screenshot-path "~/Pictures/Screenshots/Screenshot from %Y-%m-%d %H-%M-%S.png"

// keybindings
binds {
    // application spawning
    // spawn = direct exec, spawn-sh = shell (allows arguments, pipes, etc.)
    Mod+T { spawn "alacritty"; }
    Mod+E { spawn "nautilus"; }

    // application launcher (noctalia)
    Mod+A { spawn-sh "qs -c noctalia-shell ipc call launcher toggle"; }

    // session menu (logout, reboot, shutdown)
    Mod+Escape { spawn-sh "qs -c noctalia-shell ipc call sessionMenu toggle"; }

    // audio controls (work even when session is locked)
    XF86AudioRaiseVolume allow-when-locked=true { spawn-sh "qs -c noctalia-shell ipc call volume increase"; }
    XF86AudioLowerVolume allow-when-locked=true { spawn-sh "qs -c noctalia-shell ipc call volume decrease"; }
    XF86AudioMute        allow-when-locked=true { spawn-sh "qs -c noctalia-shell ipc call volume muteOutput"; }

    // overview / expos√© mode
    Mod+Tab repeat=false { toggle-overview; }

    // close focused window
    Mod+Q repeat=false { close-window; }

    // focus navigation within workspace
    Mod+Left  { focus-column-left; }
    Mod+Down  { focus-window-down; }
    Mod+Up    { focus-window-up; }
    Mod+Right { focus-column-right; }

    // move windows inside workspace
    Mod+Shift+Left  { move-column-left; }
    Mod+Shift+Down  { move-window-down; }
    Mod+Shift+Up    { move-window-up; }
    Mod+Shift+Right { move-column-right; }

    // switch focus between monitors
    Mod+Ctrl+Left  { focus-monitor-left; }
    Mod+Ctrl+Down  { focus-monitor-down; }
    Mod+Ctrl+Up    { focus-monitor-up; }
    Mod+Ctrl+Right { focus-monitor-right; }

    // move windows between monitors
    Mod+Shift+Ctrl+Left  { move-column-to-monitor-left; }
    Mod+Shift+Ctrl+Down  { move-column-to-monitor-down; }
    Mod+Shift+Ctrl+Up    { move-column-to-monitor-up; }
    Mod+Shift+Ctrl+Right { move-column-to-monitor-right; }

    // workspace switching
    Mod+1 { focus-workspace 1; }
    Mod+2 { focus-workspace 2; }
    Mod+3 { focus-workspace 3; }
    Mod+4 { focus-workspace 4; }
    Mod+5 { focus-workspace 5; }
    Mod+6 { focus-workspace 6; }
    Mod+7 { focus-workspace 7; }
    Mod+8 { focus-workspace 8; }
    Mod+9 { focus-workspace 9; }

    // move windows to workspaces
    Mod+Ctrl+1 { move-column-to-workspace 1; }
    Mod+Ctrl+2 { move-column-to-workspace 2; }
    Mod+Ctrl+3 { move-column-to-workspace 3; }
    Mod+Ctrl+4 { move-column-to-workspace 4; }
    Mod+Ctrl+5 { move-column-to-workspace 5; }
    Mod+Ctrl+6 { move-column-to-workspace 6; }
    Mod+Ctrl+7 { move-column-to-workspace 7; }
    Mod+Ctrl+8 { move-column-to-workspace 8; }
    Mod+Ctrl+9 { move-column-to-workspace 9; }

    // window state operations
    Mod+W        { maximize-column; }
    Mod+Shift+W  { fullscreen-window; }
    Mod+F        { toggle-window-floating; }

    // screenshots
    Print      { screenshot; }
    Ctrl+Print { screenshot-screen; }
    Alt+Print  { screenshot-window; }
}

// window geometry rules
window-rule {
    // rounded window corners
    geometry-corner-radius 4

    // clip window content to rounded geometry
    clip-to-geometry true
}

// noctalia-specific configuration

// debug options (required for noctalia IPC edge cases)
debug {
  honor-xdg-activation-with-invalid-serial
}

// noctalia overview layer behavior
layer-rule {
  // match noctalia overview layer
  match namespace="^noctalia-overview*"

  // render overview within backdrop layer (enables blur)
  place-within-backdrop true
}
